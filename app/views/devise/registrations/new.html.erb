<h2>Sign up</h2>
<div class="row">
    <div class="col-sm-4 well">
      <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div> <%= f.input :first_name %> </div>

       <div> <%= f.input :last_name %> </div>

        <div><%= f.input :email %></div>

        <div><%= f.input :phone_number %></div>
        <div><%= f.input :twitter_handle %></div>
        <div><%= f.input :preferred_contact, label: 'Preferred way to contact me (txt, call, email)' %></div>

        <div><%= f.input :password %></div>

        <div><%= f.input :password_confirmation %></div>

        <div><%= f.submit "Sign up", html: {class: "btn btn-success"} %></div>
      <% end %>
         <%= render "devise/shared/links" %>
     </div>
